<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.circularreveal.CircularRevealRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Add">

    <include
        android:id="@+id/toolbar_add"
        layout="@layout/toolbar_add"
        android:elevation="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/appCompatImageView"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:background="@drawable/text_bar"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/plant_photo"></androidx.appcompat.widget.AppCompatImageView>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/plant_photo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:background="@drawable/plant_photo"
                android:scaleX="0.5"
                android:scaleY="0.5"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.495"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"></androidx.appcompat.widget.AppCompatImageView>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/edit_plant"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableEnd="@drawable/edit_photo"
                android:scaleX="0.5"
                android:scaleY="0.5"
                app:layout_constraintBottom_toBottomOf="@+id/plant_photo"
                app:layout_constraintEnd_toEndOf="@+id/plant_photo"
                app:layout_constraintHorizontal_bias="0.818"
                app:layout_constraintStart_toStartOf="@+id/plant_photo"
                app:layout_constraintTop_toTopOf="@+id/plant_photo"
                app:layout_constraintVertical_bias="0.838"></com.google.android.material.button.MaterialButton>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/appCompatImageView3"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:background="@drawable/text_bar"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/plant_photo"></androidx.appcompat.widget.AppCompatImageView>

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/plant_name"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:background="@null"
                android:hint="Nazwa..."
                android:textCursorDrawable="@drawable/black_cursor"
                app:layout_constraintBottom_toBottomOf="@+id/appCompatImageView3"
                app:layout_constraintEnd_toEndOf="@+id/appCompatImageView3"
                app:layout_constraintStart_toStartOf="@+id/appCompatImageView3"
                app:layout_constraintTop_toTopOf="@+id/appCompatImageView3" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/appCompatImageView4"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/text_bar"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/appCompatImageView3"></androidx.appcompat.widget.AppCompatImageView>

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/plant_localization"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:background="@null"
                android:hint="Lokalizacja..."
                android:textCursorDrawable="@drawable/black_cursor"
                app:layout_constraintBottom_toBottomOf="@+id/appCompatImageView4"
                app:layout_constraintEnd_toEndOf="@+id/appCompatImageView4"
                app:layout_constraintStart_toStartOf="@+id/appCompatImageView4"
                app:layout_constraintTop_toTopOf="@+id/appCompatImageView4" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/appCompatImageView5"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/text_bar"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.504"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/appCompatImageView4"></androidx.appcompat.widget.AppCompatImageView>

            <Spinner
                android:id="@+id/spinner"
                android:layout_width="300dp"
                android:layout_height="50dp"
                app:layout_constraintBottom_toBottomOf="@+id/appCompatImageView5"
                app:layout_constraintEnd_toEndOf="@+id/appCompatImageView5"
                app:layout_constraintStart_toStartOf="@+id/appCompatImageView5"
                app:layout_constraintTop_toTopOf="@+id/appCompatImageView5"
                app:layout_constraintVertical_bias="0.423" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/plant_species"
                android:layout_width="180dp"
                android:layout_height="50dp"
                android:background="@null"
                android:hint="Gatunek..."
                android:textCursorDrawable="@drawable/black_cursor"
                app:layout_constraintBottom_toBottomOf="@+id/appCompatImageView5"
                app:layout_constraintEnd_toEndOf="@+id/appCompatImageView5"
                app:layout_constraintHorizontal_bias="0.208"
                app:layout_constraintStart_toStartOf="@+id/appCompatImageView5"
                app:layout_constraintTop_toTopOf="@+id/appCompatImageView5"
                app:layout_constraintVertical_bias="0.0" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/appCompatImageView5"
                app:srcCompat="@drawable/notes" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/plant_notes"
                android:layout_width="180dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@null"
                android:hint="Notatki..."
                android:textCursorDrawable="@drawable/black_cursor"
                app:layout_constraintEnd_toEndOf="@+id/imageView2"
                app:layout_constraintHorizontal_bias="0.208"
                app:layout_constraintStart_toStartOf="@+id/imageView2"
                app:layout_constraintTop_toTopOf="@+id/imageView2" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>


</com.google.android.material.circularreveal.CircularRevealRelativeLayout>