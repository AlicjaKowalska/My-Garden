<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="407dp"
        android:layout_height="71dp"
        android:background="@color/white"
        android:elevation="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/harmonogram"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="290dp"
            android:background="@color/white"
            android:backgroundTint="@color/white"
            android:clickable="true"
            android:drawableRight="@drawable/harmonogram"
            android:scaleX="0.5"
            android:scaleY="0.5"
            app:backgroundTint="#FFFFFF"></com.google.android.material.button.MaterialButton>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/add"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="105dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="150dp"
            android:layout_marginRight="150dp"
            android:background="@color/white"
            android:backgroundTint="@color/white"
            android:clickable="true"
            android:drawableRight="@drawable/add"
            android:scaleX="0.5"
            android:scaleY="0.5"
            android:textAlignment="center"
            app:backgroundTint="#FFFFFF"></com.google.android.material.button.MaterialButton>


        <com.google.android.material.button.MaterialButton
            android:id="@+id/plants"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="290dp"
            android:layout_marginRight="10dp"
            android:background="@color/white"
            android:backgroundTint="@color/white"
            android:clickable="true"
            android:drawableRight="@drawable/plants"
            android:scaleX="0.5"
            android:scaleY="0.5"
            app:backgroundTint="#FFFFFF"></com.google.android.material.button.MaterialButton>


    </com.google.android.material.bottomnavigation.BottomNavigationView>

</androidx.constraintlayout.widget.ConstraintLayout>