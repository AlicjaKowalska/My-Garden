<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:id="@+id/relative">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="image details"
        android:textSize="24sp"
        android:textColor="@color/black"
        android:fontFamily="sans-serif-black"
        android:paddingLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@id/sr_imageIV"
        android:id="@+id/sr_imageDetailsTV">
    </TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="image details"
        android:textSize="20sp"
        android:paddingLeft="10dp"
        android:layout_below="@id/sr_imageDetailsTV"
        android:layout_toRightOf="@id/sr_imageIV"
        android:id="@+id/sr_localization">
    </TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="image details"
        android:textSize="20sp"
        android:paddingLeft="10dp"
        android:layout_below="@id/sr_localization"
        android:layout_toRightOf="@id/sr_imageIV"
        android:id="@+id/sr_species">
    </TextView>

    <TextView
        android:layout_width="150dp"
        android:layout_height="110dp"
        android:text="image details"
        android:textSize="20sp"
        android:id="@+id/sr_notes"
        android:paddingLeft="10dp"
        android:layout_below="@id/sr_species"
        android:layout_toRightOf="@id/sr_imageIV">
    </TextView>

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:id="@+id/sr_imageIV"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/plant_photo" />

    <View
        android:id="@+id/divider9"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:elevation="2dp"
        android:layout_below="@id/sr_imageIV"
        android:layout_marginTop="20dp"
        android:background="?android:attr/listDivider" />


</RelativeLayout>